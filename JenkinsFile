pipeline {
  agent any

  environment {
    REACT_DIR = 'frontend'
    EXPRESS_DIR = 'backend'
  }

  stages {
    stage('Checkout') {
      steps {
        echo 'ğŸ“¥ Cloning repository...'
        checkout scm
      }
    }

    stage('Install Frontend Deps') {
      steps {
        dir("${REACT_DIR}") {
          echo 'ğŸ“¦ Installing frontend dependencies...'
          sh 'npm install'
        }
      }
    }

    stage('Install Backend Deps') {
      steps {
        dir("${EXPRESS_DIR}") {
          echo 'ğŸ“¦ Installing backend dependencies...'
          sh 'npm install'
        }
      }
    }

    stage('Run Frontend Tests') {
      steps {
        dir("${REACT_DIR}") {
          echo 'ğŸ§ª Running frontend tests...'
          sh 'npm test || true'  // change to fail the build if needed
        }
      }
    }

    stage('Run Backend Tests') {
      steps {
        dir("${EXPRESS_DIR}") {
          echo 'ğŸ§ª Running backend tests...'
          sh 'npm test || true'
        }
      }
    }

    stage('Build Frontend') {
      steps {
        dir("${REACT_DIR}") {
          echo 'ğŸ—ï¸ Building React app...'
          sh 'npm run build'
        }
      }
    }

    // Optional: Deploy Stage (FTP, SSH, Docker, etc.)
    // stage('Deploy') {
    //   steps {
    //     echo 'ğŸš€ Deploying app...'
    //     sh './deploy.sh' // or use Docker/SSH command
    //   }
    // }
  }

  post {
    success {
      echo 'âœ… Build succeeded!'
    }
    failure {
      echo 'âŒ Build failed.'
    }
  }
}
